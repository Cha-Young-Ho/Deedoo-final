<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_doeny"
    android:orientation="vertical"
    tools:context=".HOME_ETC.Home_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/dark_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <com.anychart.AnyChartView
            android:id="@+id/plan_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white_gray"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/map_Button"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerInParent="true"
                android:background="#00B51E1E"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/map" />

            <TextView
                android:id="@+id/map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/map_Button"
                android:layout_centerHorizontal="true"
                android:text="구역정하기" />
        </RelativeLayout>

        <View

            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/plan_Button"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00B51E1E"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/plan" />

            <TextView
                android:id="@+id/plan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plan_Button"
                android:layout_centerHorizontal="true"
                android:text="계획세우기" />
        </RelativeLayout>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/inquiry_Button"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerInParent="true"
                android:background="#00B51E1E"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/lookup" />

            <TextView
                android:id="@+id/inquiry_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inquiry_Button"
                android:layout_centerHorizontal="true"
                android:text="내 일과 확인" />
        </RelativeLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/friend_setting_Button"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerInParent="true"
                android:background="#00B51E1E"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/user_profile" />

            <TextView
                android:id="@+id/friend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_setting_Button"
                android:layout_centerHorizontal="true"
                android:text="친구 관리" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>