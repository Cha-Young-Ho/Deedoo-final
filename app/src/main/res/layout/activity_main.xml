<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_doeny"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_white"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/main_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white_gray"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/map_Button"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerInParent="true"

                android:background="#00B51E1E"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/map" />

            <TextView
                android:id="@+id/map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구역정하기"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/map_Button"/>
        </RelativeLayout>

        <View

            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/plan_Button"

                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/plan"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/plan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계획세우기"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/plan_Button"
                />
        </RelativeLayout>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/white_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/inquiry_Button"
                android:layout_width="180sp"

                android:layout_height="180sp"
                android:layout_centerInParent="true"

                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/lookup" />

            <TextView
                android:id="@+id/inquiry_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 일과 확인"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/inquiry_Button"/>
        </RelativeLayout>

        <View

            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/user_profile_Button"
                android:layout_width="180sp"

                android:layout_height="180sp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/user_profile" />

            <TextView
                android:id="@+id/friend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 관리"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/user_profile_Button"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>